/ This is the second page in the creation process for new assisters.
/ Contains language choices and other stuff

/ Includes background image and stuff
.row.hero{class: "#{@page_data[:current_page]==1 ? 'homepage-override' : ''}"}

  .col-xs-12
    .row
      .col-xs-3.transPanel

      .col-xs-6.visitorForm
        %h1
          Languages and Certifications

          .row
            .col-xs-12.newForm
              = form_for :visitor, :url => { :controller => "visitors", :method => "post"} do |f|
                .row
                  .col-xs-12.picklang
                    = f.label 'Which languages do you speak?'
                    (Select all that apply)

                .row
                  .col-xs-12
                    .row
                      .col-xs-1
                        = f.check_box :English, :class => "checkbox", inline_label: 'Remember me'

                      .col-xs-2.boxLabel
                        English

                      .col-xs-1
                        = f.check_box :Spanish, :class => "checkbox"

                      .col-xs-2.boxLabel
                        Spanish

                      .col-xs-1
                        = f.check_box :Mandarin, :class => "checkbox"

                      .col-xs-2.boxLabel
                        Mandarin

                    .row
                      .col-xs-1
                        = f.check_box :French, :class => "checkbox"

                      .col-xs-2.boxLabel
                        French

                      .col-xs-1
                        = f.check_box :Vietnamese, :class => "checkbox"

                      .col-xs-2.boxLabel
                        Vietnamese

                      .col-xs-1
                        = f.check_box :Tagalog, :class => "checkbox"

                      .col-xs-2.boxLabel
                        Tagalog
                    / = f.check_box :AmericanSignLanguage, :class => "checkbox"


                /     .form-group
                /       = f.text_field :firstname, :placeholder => "First Name"
  
                /   .col-xs-6
                /     .form-group
                /       = f.text_field :lastname, :placeholder => "Last Name"
      
                / .row
                /   .col-xs-12
                /     = f.label :phone, 'Contact Information'

                / .row
                /   .col-xs-6
                /     .form-group
                /       = f.text_field :phone, :placeholder => "Phone Number"
                /   .col-xs-6
                /     .form-group
                /       = f.text_field :email, :placeholder => "Email"
                / .row
                /   .col-xs-12
                /     = f.label :zip, 'Zip Code'

                / .row
                /   .col-xs-6
                /     .form-group
                /       = f.text_field :zip, :placeholder => "e.g. 94108" , :class => "zipField"

                .row
                  .col-xs-6.col-xs-offset-6
                    .form-group
                      = f.submit "Submit", :class => "newPageSubmit" 
