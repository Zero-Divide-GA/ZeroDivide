.row
  .col-xs-2
  .col-xs-8
    .h2  
      Sign Up
  .col-xs-2

.row
  .col-xs-2
  .col-xs-8

    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      .login-info-box
        = f.label :email, 'Please provide an email we can use for your profile. This is also your login ID.'
        %br
        = f.email_field :email, :autofocus => true

      %div
        = f.label :password
        %br
        = f.password_field :password

      %div
        = f.label :password_confirmation, 'Please type your password again to confirm it'
        %br
        = f.password_field :password_confirmation

      .triggered-submit{disabled: true}
        = f.submit "Sign up"


    = render "devise/shared/links"
