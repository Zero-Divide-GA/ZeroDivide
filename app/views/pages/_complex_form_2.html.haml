  = "years old, I am "
  = render 'dropdown', {dropdown_id: 'marital_status_choices', dropdown_title: '-select-', options_list: ['married', 'single']}
  %input{id: 'marital_status', name: 'marital_status', type: 'hidden'}
  = "and I'm looking for health insurance for"
  = render 'dropdown', {dropdown_id: 'shop_for_choices', dropdown_title: '-select-', options_list: ['my family', 'myself']}
  %input{id: 'shop_for', name: 'shop_for', type: 'hidden'}
  %button.btn.btn-default.submit
    Go  
