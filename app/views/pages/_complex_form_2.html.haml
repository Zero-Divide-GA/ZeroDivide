.complex-form-box
  .question-follow
    = @page_data[:question_main]

  = form_tag('/page', id: 'pageform') do
    .form-content
      %input{name: 'page_id', type: 'hidden', value: @page_data[:next_page]}  
      = "I am"
      %input.ageinput.inline.form-control{name: 'age',  type: 'text', placeholder: ''}
      = "years old, I am "
      = render 'dropdown', {dropdown_title: 'married', options_list: ['single']}
      = "and I'm looking for health insurance for"
      = render 'dropdown', {dropdown_title: 'my family', options_list: ['myself']}
      %button.btn.btn-default.submit
        Go  
