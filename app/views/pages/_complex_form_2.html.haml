- content_for(:main) do 
  = "I am"
  %input.ageinput.inline.form-control{name: 'age',  type: 'text', placeholder: '', value: session[:current_info]['age']}
  years old, and I

  %span.explain_text
    need healthcare for
    .help_text
      This is where the help would go typically.
  (check all that apply):
  .nextline
    .forms-checkbox
      Myself
      = check_box_tag 'shop_for[]', 'myself', (session[:current_info]['shop_for'] && session[:current_info]['shop_for'].include?('myself'))
    .forms-checkbox
      My Children
      = check_box_tag 'shop_for[]', 'my children', (session[:current_info]['shop_for'] && session[:current_info]['shop_for'].include?('my children'))
    .forms-checkbox
      Other Adults  
      = check_box_tag 'shop_for[]', 'other adults', (session[:current_info]['shop_for'] && session[:current_info]['shop_for'].include?('other adults'))
    .inputboxes
      .boxset
        .helpbox
          Number of children
        %div
          %input.form-control{name: 'number_of_children', type: 'text', value: session[:current_info]['number_of_children'] == 0 ? '' : session[:current_info]['number_of_children'], placeholder: '', style: 'line-height: 120%;'}
      .boxset
        .helpbox
          Number of other adults
        %div
          %input.form-control{name: 'number_of_adults', type: 'text', value: session[:current_info]['number_of_adults'] == 0 ? '' : session[:current_info]['number_of_adults'], placeholder: '', style: 'line-height: 120%;'}
      
  %button.btn.btn-default.submit
    Go  
