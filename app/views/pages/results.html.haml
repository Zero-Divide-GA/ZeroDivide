.results-bg
  .row.results-row
    .col-xs-2
    .col-xs-8.info-box
      .bold-text
        REFINE THE RESULTS

      .row.checkboxes
        - @page_data[:checkbox_list].each do |cb|  
          .col-xs-3.popupparent
            %span.popup
              = raw(cb[:popup_html])
            %span.box.unselected
              &nbsp;X
            %span.box-label
              = cb[:label]
    .col-xs-2
      
  .row.results-row
    .col-xs-2
    .col-xs-8.info-box
      = render 'results_list'
    .col-xs-2

  .row.results-row
    .col-xs-2
    .col-xs-8.info-box
    .col-xs-2
