.complex-form-box{class: "#{@page_data[:current_page]==1?'homepage-override':''}", style: 'width: 75%; margin-left: 130px; padding-left: 25px'}
  .icon-row
    .icon-box
      - if @page_data[:icon_array][0]!=''
        = link_to image_tag(@page_data[:icon_array][0], class: 'img-responsive'), '/page?page_id=1'
    .icon-box
      - if @page_data[:icon_array][1]!=''
        = link_to image_tag(@page_data[:icon_array][1], class: 'img-responsive'), '/page?page_id=2'
    .icon-box
      - if @page_data[:icon_array][2]!=''
        = link_to image_tag(@page_data[:icon_array][2], class: 'img-responsive'), '/page?page_id=3'
    .icon-box
      - if @page_data[:icon_array][3]!=''
        = link_to image_tag(@page_data[:icon_array][3], class: 'img-responsive'), '/page?page_id=4'

  .question-follow{style: 'font-size: 22px;'}
    .question-text
      = @page_data[:question_main]

  = form_tag('/page', id: 'pageform') do
    .form-content
      %input#page_id{name: 'page_id', type: 'hidden', value: @page_data[:next_page]}  
      = content_for :main
  = content_for :suffix_form_content
